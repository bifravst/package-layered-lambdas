{
  "name": "@nrfcloud/package-layered-lambdas",
  "version": "0.0.0-development",
  "description": "Packages lambda functions and layers for AWS lambda",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "lint": "npm run tslint && npm run prettier:lint",
    "tslint": "tslint --project ./tsconfig.json",
    "prettier": "prettier --write \"./src/**.ts\"",
    "prettier:lint": "prettier --list-different \"./src/**.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nRFCloud/package-layered-lambdas.git"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/nRFCloud/package-layered-lambdas/issues"
  },
  "homepage": "https://github.com/nRFCloud/package-layered-lambdas#readme",
  "dependencies": {
    "aws-sdk": "^2.493.0",
    "dependency-tree": "^7.0.2",
    "glob": "^7.1.4",
    "tmp": "0.1.0",
    "ts-loader": "^6.0.4",
    "webpack": "^4.37.0",
    "webpack-node-externals": "^1.7.2",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-angular": "^8.1.0",
    "@nrfcloud/tslint-config": "^3.10.0",
    "@types/dependency-tree": "^6.1.0",
    "@types/glob": "^7.1.1",
    "@types/node": "^12.6.6",
    "@types/tmp": "0.1.0",
    "@types/webpack": "^4.4.35",
    "@types/webpack-node-externals": "^1.6.3",
    "@types/yazl": "^2.4.1",
    "husky": "^3.0.0",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "files": [
    "package-lock.json",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "npm run lint"
    }
  }
}
